<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.HistoricoController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="500.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
            <children>
                <Label layoutX="195.0" layoutY="30.0" text="Histórico de Uso">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                </Label>

                <TextField fx:id="textFieldPlaca" layoutX="195.0" layoutY="80.0" prefWidth="250.0" promptText="Digite a placa do veículo" />
                <Button layoutX="460.0" layoutY="80.0" mnemonicParsing="false" onAction="#buscarHistorico" text="Buscar" />
                <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#backMainPage" text="Voltar" />

                <TableView fx:id="tableViewHistorico" layoutX="40.0" layoutY="130.0" prefHeight="350.0" prefWidth="560.0">
                    <columns>
                        <TableColumn fx:id="colunaMotorista" prefWidth="180.0" text="Motorista / Operador" />
                        <TableColumn fx:id="colunaRetirada" prefWidth="190.0" text="Data/Hora Retirada" />
                        <TableColumn fx:id="colunaDevolucao" prefWidth="190.0" text="Data/Hora Devolução" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</VBox>